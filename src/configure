#!/bin/sh
VERSION=0.1
prefix=/usr/local
while test x$1 != x; do
        case $1 in
                --prefix=*)
                        prefix=`echo $1 | sed 's/--prefix=//'`
                        ;;
                --prefix)
                        echo --prefix needs an argument: --prefix=directory >&2
                        ;;
                *)
                        echo Unknown argument $1 >&2
        esac
        shift
done

echo "prefix=$prefix" > config.make
echo "RUNTIME=mono" >> config.make
echo "VERSION=1.0.0.0" >> config.make

echo "Bitsharp has been configure to be installed in $prefix"